<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, shrink-to-fit=no, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%=title%></title>

        <!-- bower:js -->
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="/lib/jquery.sticky/jquery.sticky.js"></script>
        <!-- endbower -->   
    <!-- inject:css -->
    <link rel="stylesheet" href="/css/animate.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/css/simple-sidebar.css">
    <!-- endinject -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Admin Panel
                    </a>
                </li>
                <% for(var i=0; i<nav.length; i++){%>
                    <li>
                    <a href="<%=nav[i].Link%>"><%=nav[i].Text%></a></li>
                <%}%>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <h2><%=title%></h2>
                    <form action="/Admin/addOffer" method="post" class="form-horizontal" accept-charset="utf-8">
                            <div class="form-group ">
                                <label class="col-sm-2 col-lg-1 control-label ">Promoción</label>
                                <div class="col-sm-8">
                                    <input id="offerName" class="form-control" name="offerName" placeholder="Ingrese nombre de la promo" value="<%=offer.offerName%>" required type="text" maxlength="50">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="col-sm-2 col-lg-1 control-label ">Descripción</label>
                                <div class="col-sm-8">
                                    <input id="offerDesc" class="form-control" name="offerDesc" placeholder="Ingrese descripción de la oferta" value="<%=offer.offerDesc%>" required type="text"maxlength="100">
                                </div>
                            </div>
                            <div class="form-group "> 
                                <label class="col-sm-2  col-lg-1 control-label">Precio</label>
                                <div class="col-sm-8">
                                    <input id="offerPrice" class="form-control" name="offerPrice" placeholder="Ingrese precio" type="number" value="<%=offer.offerPrice%>" required step="any"  maxlength="50">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-1 col-sm-7">
                                    <button class="btn btn-default btn-success b10" type="submit" id="form-button-save"><i class="fa fa-check"></i> Guardar</button>
                                    <a class="btn btn-default cancel-button b10" href="/admin/adminOfertas" id="cancel-button">Cancelar </a>
                                </div>
                            </div>
                        </form>
                </div>
        </div>
        <!-- /#page-content-wrapper -->
        
    </div>
    <!-- /#wrapper -->
    
</body>
<script>

</script>
</html>
